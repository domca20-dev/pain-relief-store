{%- comment -%}
  Section 10: Trust Commitment — Quality Guarantee (#56 pattern)
  Upgraded: Two-column layout with icon grid on left, product image on right.
  With CTA button, mobile-responsive column reversal.
  Removes final purchase friction. Shows risk reversal.
{%- endcomment -%}

<style>
  .qg-section {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: 56px 0;
  }
  .qg-section__inner {
    display: flex;
    max-width: 1200px;
    margin: auto;
    padding: 0 40px;
    gap: 60px;
    align-items: center;
  }
  .qg-left {
    flex: 1;
    min-width: 0;
  }
  .qg-right {
    flex: 1;
    min-width: 0;
  }
  .qg-right__image {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    background: #f0f0f0;
  }
  .qg-right__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .qg-right__placeholder {
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: #999;
    padding: 20px;
    text-align: center;
  }
  .qg-section__title {
    font-size: 36px;
    font-weight: 800;
    line-height: 1.15;
    color: #1a1a2e;
    margin: 0 0 12px;
    letter-spacing: -0.5px;
  }
  .qg-section__subtitle {
    font-size: 16px;
    font-weight: 500;
    line-height: 1.55;
    color: #555;
    margin: 0 0 36px;
  }

  /* Icon grid (#56 pattern) */
  .qg-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 28px 20px;
    margin-bottom: 36px;
  }
  .qg-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .qg-item__icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(46,204,113,0.1);
    border-radius: 10px;
    flex-shrink: 0;
  }
  .qg-item__icon svg {
    width: 24px;
    height: 24px;
  }
  .qg-item__text {
    font-size: 15px;
    font-weight: 600;
    line-height: 1.45;
    color: #1a1a2e;
  }

  /* CTA */
  .qg-section__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background: #2ecc71;
    color: #fff;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 700;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.2s ease;
  }
  .qg-section__cta:hover {
    background: #27ae60;
    transform: translateY(-2px);
  }

  @media screen and (max-width: 900px) {
    .qg-section__inner {
      flex-direction: column-reverse;
      gap: 32px;
      padding: 0 24px;
    }
    .qg-left {
      margin-top: 0;
    }
  }
  @media screen and (max-width: 749px) {
    .qg-section {
      padding: 40px 0;
    }
    .qg-section__title {
      font-size: 26px;
    }
    .qg-section__subtitle {
      font-size: 14px;
    }
    .qg-section__inner {
      padding: 0 16px;
    }
    .qg-section__cta {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<div class="qg-section">
  <div class="qg-section__inner">
    <div class="qg-left">
      <h2 class="qg-section__title">Our Promise to You</h2>
      <p class="qg-section__subtitle">We built the [BRAND]™ belt on a foundation of quality and trust. Every detail is designed to give you confidence in your purchase.</p>

      <div class="qg-grid">
        <div class="qg-item">
          <div class="qg-item__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="#2ecc71" stroke-width="2" stroke-linecap="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <div class="qg-item__text">60-Day Money-Back Guarantee</div>
        </div>

        <div class="qg-item">
          <div class="qg-item__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="#2ecc71" stroke-width="2" stroke-linecap="round">
              <rect x="1" y="3" width="22" height="18" rx="2"/>
              <path d="M1 10h22"/>
            </svg>
          </div>
          <div class="qg-item__text">Free Worldwide Shipping</div>
        </div>

        <div class="qg-item">
          <div class="qg-item__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="#2ecc71" stroke-width="2" stroke-linecap="round">
              <path d="M9 11l3 3L22 4"/>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
            </svg>
          </div>
          <div class="qg-item__text">Easy Returns — No Questions Asked</div>
        </div>

        <div class="qg-item">
          <div class="qg-item__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="#2ecc71" stroke-width="2" stroke-linecap="round">
              <rect x="3" y="11" width="18" height="11" rx="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
          </div>
          <div class="qg-item__text">Secure Encrypted Payments</div>
        </div>

        <div class="qg-item">
          <div class="qg-item__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="#2ecc71" stroke-width="2" stroke-linecap="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
          </div>
          <div class="qg-item__text">FDA-Registered & Clinically Backed</div>
        </div>

        <div class="qg-item">
          <div class="qg-item__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="#2ecc71" stroke-width="2" stroke-linecap="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </div>
          <div class="qg-item__text">Dedicated Customer Support</div>
        </div>
      </div>

      <a class="qg-section__cta" href="{{ section.settings.cta_url | default: '#product-hero' }}">
        {{ section.settings.cta_text | default: 'Shop Risk-Free' }}
      </a>
    </div>

    <div class="qg-right">
      <div class="qg-right__image">
        {%- if section.settings.image -%}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="Quality guarantee" width="800" height="800" loading="lazy">
        {%- else -%}
          <div class="qg-right__placeholder">[Image: Product with trust badges or lifestyle shot]</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Commitment",
  "tag": "section",
  "class": "trust-commitment-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA button text",
      "default": "Shop Risk-Free"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA button link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Trust Commitment"
    }
  ]
}
{% endschema %}
